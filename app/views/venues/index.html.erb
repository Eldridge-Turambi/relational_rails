<header><%= link_to "Performers", '/performers' %></header>

<h1>These are the venues</h1>

<% @venues.each do |venue| %>
  <%= venue.name %>
  <%= venue.lights %>
  <%= venue.capacity %>
  <%= link_to "Edit #{venue.name}'s info", "/venues/#{venue.id}/edit" %>
  <%= link_to "Delete #{venue.name}'s info", "/venues/#{venue.id}", method: :delete %>
<% end %>

<%= link_to "New Venue", '/venues/new' %>
